<!DOCTYPE html>
<html>
<head>
    <title>Deity - View All</title>
</head>
<body>
<h1>Deity</h1>
<% if(locals.was_successful) { %>
<div>
    <div id="message">
        Deletion was successful.
    </div>
</div>
<% } %>
<a href="/deity/add">Add New Deity</a> <br/>
<table border = "1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Deity Of</th>
        <th>Alignment</th>
        <th>Actions</th>
    </tr>
    <% for(var i = 0; i < deity.length; i++) { %>
    <tr>
        <td><%= deity[i].deity_id %></td>
        <td><%= deity[i].d_name %></td>
        <td><%= deity[i].deityOf %></td>
        <td><%= deity[i].d_alignment %></td>
        <td>
            <a href="/deity/edit/?deity_id=<%= deity[i].deity_id %>">
                Edit
            </a>
            &nbsp;<a href="/deity/delete?deity_id=<%= deity[i].deity_id %>">
                Delete
            </a>
        </td>
    </tr>
    <% } %>
</table>
</body>
</html>